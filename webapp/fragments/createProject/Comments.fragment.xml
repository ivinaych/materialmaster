        <Panel expandable="true" expanded="true" width="auto" binding="{docCommentModel>/reqLevelComments}" class="MM_panel sapUiSmallMarginEnd sapUiSmallMarginBottom">
            <headerToolbar>
                <OverflowToolbar class="">
                    <Title text="{i18n>commentsWithOpeningBracket}" class="MM_Title" level="H5" titleStyle="H5"></Title>
                    <Text emptyIndicatorMode="On" text="{docCommentModel>totalcomments}" class="MM_Title"></Text>
                    <Title text="{i18n>closingBracket}" class="MM_Title" level="H5" titleStyle="H5"></Title>
                </OverflowToolbar >
            </headerToolbar>

            <FeedInput value="{docCommentModel>newComment}" post="onPostReqLevelComments" showIcon="false" placeholder="Enter a comment (Max-500 characters)" maxLength="500" enabled="{parts:['oAppModel>/sideNavigation/currentView', 'oAppModel>/taskDetails/wfTaskType', 'CreateProject>/RequestHeader/data/requestStatus', 'CreateMassRequest>/RequestHeader/data/requestStatus', 'CreateProject>/GeneralData/isUserRequestOwner', 'CreateMassRequest>/isUserRequestOwner'],formatter: '.formatter.fnReqCommentFeedInputEnable'}"/>
            <!-- class="MM_FeedInput" -->

            <uiTable:Table rows="{docCommentModel>existingComments}" selectionMode="None" class="MM_UiTable sapUiTinyMargin MM_UiTableCopy" visibleRowCount="5">
                <uiTable:columns>
                    <uiTable:Column>
                        <Label text="{i18n>comment}" />
                        <uiTable:template>
                            <HBox>
                                <Text text="{docCommentModel>comment}"/>
                            </HBox>
                        </uiTable:template>
                    </uiTable:Column>
                    <uiTable:Column width="20%">
                        <Label text="{i18n>commentedBy}" />
                        <uiTable:template>
                            <Text text="{docCommentModel>commentedBy}" />
                        </uiTable:template>
                    </uiTable:Column>
                    <uiTable:Column width="15%">
                        <Label text="{i18n>time} {i18n>gmt} "/>
                        <uiTable:template>
                            <Text text="{docCommentModel>commentedOn}"/>
                        </uiTable:template>
                    </uiTable:Column>
                </uiTable:columns>
