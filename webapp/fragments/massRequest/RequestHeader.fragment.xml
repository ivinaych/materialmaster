<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">
    <l:Grid defaultSpan="XL4 L4 M6 S12" class="" binding="{CreateMassRequest>/RequestHeader/data}">
        <VBox>
            <Label text="{i18n>massRequestType}" class="MM_Label" required="true" />
            <ComboBox width="100%" class="MM_ComboBox" placeholder="{i18n>selectRequestType}" selectedKey="{CreateMassRequest>requestType}" valueState="{CreateMassRequest>/RequestHeader/valueState/requestType}" showSecondaryValues="true" items="{LookupModel>/massRequestRequestType}" selectionChange="onSelectMassRequestType"  editable="{CreateMassRequest>/RequestHeader/editable/requestType}" change="fnHandleComboboxValidation">
                <core:ListItem key="{LookupModel>MM_KEY}" text="{LookupModel>MM_REQUEST_TYPE_DESCRIPTION}"/>
            </ComboBox>
        </VBox>
        <VBox>
            <Label text="{i18n>materialType}" class="MM_Label" required="true"/>
            <ComboBox width="100%" class="MM_ComboBox" placeholder="{i18n>selectMaterialType}" selectedKey="{CreateMassRequest>materialType}" valueState="{CreateMassRequest>/RequestHeader/valueState/materialType}" showSecondaryValues="true" filterSecondaryValues= "true" items="{LookupModel>/requestSpecificLookups/materialType}" selectionChange="onSelectMassMaterialType"  editable="{CreateMassRequest>/RequestHeader/editable/materialType}" change="fnHandleComboboxValidation">
                <core:ListItem key="{LookupModel>MM_KEY}" text="{LookupModel>MM_MATERIAL_TYPE_SAP_CODE} - {LookupModel>MM_MATERIAL_TYPE_DESCRIPTION}"/>
            </ComboBox>
        </VBox>
        <!-- <VBox>
            <Label text="{i18n>system}" class="MM_Label" required="false" />
            <ComboBox width="100%" class="MM_ComboBox" placeholder="{i18n>selectSystemId}" selectedKey="{CreateMassRequest>systemId}" valueState="{CreateMassRequest>/RequestHeader/valueState/systemId}" showSecondaryValues="true" items="{LookupModel>/MM_SYSTEM_REF_LIST}" selectionChange="onSelectMassSystemId" editable="{= ${CreateMassRequest>/RequestHeader/data/requestStatus} === 1}" change="fnHandleComboboxValidation">
                <core:ListItem key="{LookupModel>MM_KEY}" text="{LookupModel>MM_SYSTEM_REF_LIST_CODE} - {LookupModel>MM_SYSTEM_REF_LIST_DESC}" additionalText="{LookupModel>MM_KEY}"/>
            </ComboBox>
        </VBox> -->
        <VBox>
            <Label text="{i18n>massRequestDesc}" class="MM_Label" required="true"/>
            <Input class="MM_InputText" placeholder="{i18n>enterRequestDesc}" value="{CreateMassRequest>requestDescription}" valueState="{CreateMassRequest>/RequestHeader/valueState/requestDescription}"  liveChange="onLiveCheckMassRequestDesc" editable="{= ${CreateMassRequest>/RequestHeader/data/requestStatus} === 1}"/>
        </VBox>
        <VBox>
            <Label text="{i18n>requestStatus}" class="MM_Label" />
            <Input value="{parts:['CreateMassRequest>requestStatus', 'LookupModel>/requestStatus'],formatter: '.formatter.getStatustext'}" class="MM_InputText" editable="false"/>
        </VBox>
        <!-- <VBox>
            <Label text="{i18n>dateRequired}" class="MM_Label" required="true"/>
            <DatePicker id="MM_requestHeaderMassUpdateDateRequired" value="{CreateMassRequest>dateRequired}" valueState="{CreateMassRequest>/RequestHeader/valueState/dateRequired}" valueFormat="yyyy-MM-dd HH:mm:ss" displayFormat="yyyy-MM-dd" placeholder="yyyy-mm-dd HH:mm:ss" class="MM_DatePicker" change="onLiveMassCheckRequiredDate" editable="{= ${CreateMassRequest>/RequestHeader/data/requestStatus} === 1}"/>
        </VBox> -->
        <VBox>
            <Label text="{i18n>createdOn} {i18n>gmt} " class="MM_Label"/>
            <DatePicker value="{CreateMassRequest>createdOn}" valueFormat="yyyy-MM-dd" displayFormat="yyyy-MM-dd" placeholder="yyyy-mm-dd HH:mm:ss" class="MM_DatePicker" editable="false"/>
        </VBox>
        <VBox>
            <Label text="{i18n>createdBy}" class="MM_Label" />
            <Input value="{CreateMassRequest>createdBy}" class="MM_InputText" editable="false"/>
        </VBox>
        <VBox>
            <Label text="{i18n>changedOn}" class="MM_Label"/>
            <DatePicker value="{CreateMassRequest>changedOn}" valueFormat="yyyy-MM-dd" displayFormat="yyyy-MM-dd" placeholder="yyyy-mm-dd HH:mm:ss" class="MM_DatePicker" editable="false"/>
        </VBox>
        <VBox>
            <Label text="{i18n>changedby}" class="MM_Label"/>
            <Input value="{CreateMassRequest>changedBy}" class="MM_InputText" editable="false"/>
        </VBox>
        <VBox>
            <Label text= "" class="MM_Label"/>
            <CheckBox text="{i18n>priority}" selected="{CreateMassRequest>priority}" class="MM_CheckBox" editable="{= ${CreateMassRequest>/RequestHeader/data/requestStatus} === 1}" />
        </VBox>
    </l:Grid>
</core:FragmentDefinition>