<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout">
	<Dialog title="{MaterialDetails>/SystemDetails/AdditionalData/descriptionData/descriptionDialogTitle}" id="id_Material_Desc" draggable="true">
		<content>
			<f:SimpleForm editable="true" layout="ColumnLayout" columnsM="1" columnsL="1" columnsXL="2">
				<f:content>
					<Label text= "{i18n>languageCode}" class="MM_Label" required="true"/>
					<ComboBox selectedKey="{MaterialDetails>/SystemDetails/AdditionalData/descriptionData/ODescAddOrUpdate/MM_LANGUAGE}" 
					items="{
						path: 'LookupModel>/selectedSystemDataDropdown/MM_FILTERED_LANGUAGE_DESCRIPTION',
						filters: [{path: 'LanguageName', operator: 'NE', value1: 'Z1' }]
						}" 
					showSecondaryValues="true" filterSecondaryValues= "true" class="MM_ComboBox" placeholder="{i18n>selectLanguageCode}" editable="{MaterialDetails>/SystemDetails/AdditionalData/descriptionData/bDescLanguageCode}" change="changeDescLanguageCode" valueState="{MaterialDetails>/SystemDetails/AdditionalData/descriptionData/descLanguageValueState}" valueStateText="{MaterialDetails>/AdditionalData/descriptionData/descLanguageValueStateText}">
						<core:ListItem key="{LookupModel>LanguageName}" text="{LookupModel>LanguageName} - {LookupModel>Descrption}"/>
					</ComboBox>
					<Label text= "{i18n>MM_MATERIAL_DESCRIPTION_MAKT_MAKTX}" class="MM_Label"  required="true"/>
					<Input value="{MaterialDetails>/SystemDetails/AdditionalData/descriptionData/ODescAddOrUpdate/MM_MATERIAL_DESCRIPTION_MAKT_MAKTX}" maxLength="40" change="changeMaterialDesc" valueState="{MaterialDetails>/SystemDetails/AdditionalData/descriptionData/descNoteValueState}" valueStateText="{MaterialDetails>/SystemDetails/AdditionalData/descriptionData/descNoteValueStateText}"></Input>
				</f:content>
			</f:SimpleForm>
		</content>
		<footer>
			<Toolbar>
				<content>
					<ToolbarSpacer />
					<Button text="{i18n>Ok}" press="pressDescrDialogOk" />
					<Button text="{i18n>Cancel}" press="pressDescrDialogCancel" ariaHasPopup="Dialog" />
				</content>
			</Toolbar>
		</footer>
	</Dialog>
</core:FragmentDefinition>