<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:uiTable="sap.ui.table">
    <Dialog horizontalScrolling="false" title="{i18n>documentSystemStatus}- {docCommentModel>/documents/selectedDocument/documentName}" class="MM_FragmentHeader" id="id_DocumentSystemStatus" contentWidth="50%" draggable="true">
        <OverflowToolbar >
            <ToolbarSpacer />
            <Button text="{i18n>AddSystem}" press="onPressAddSystemToDocument" enabled="{parts:['MaterialDetails>/GeneralData/oldMaterialDetailsData/systemData','docCommentModel>/documents/selectedDocument'], formatter:'.formatter.getDocumentAddSystemEnability'}" class="MM_BtnEmphasized" type="Emphasized" />
        </OverflowToolbar>

        <uiTable:Table rows="{docCommentModel>/documents/selectedDocument/systemData}" selectionMode="None" class="MM_UiTable sapUiTinyMargin" visibleRowCount="2" >
            <uiTable:columns>
                <uiTable:Column width="10%">
                    <Label text="{i18n>markForSyndication}" />
                    <uiTable:template>
                        <Switch state="{docCommentModel>markForSyndication}" enabled="{docCommentModel>markForSyndicationEnabled}" customTextOn="{i18n>SwitchAction_Yes}" customTextOff="{i18n>SwitchAction_No}" change="onChangeMarkForSyndicationDocumentSystem" />
                    </uiTable:template>
                </uiTable:Column>
                <uiTable:Column>
                    <Label text="{i18n>system}" />
                    <uiTable:template>
                        <Text text="{parts:['docCommentModel>dmsDocSystemId', 'LookupModel>/MM_SYSTEM_REF_LIST'],formatter: '.formatter.getSystemText'}" class=""/>
                    </uiTable:template>
                </uiTable:Column>
                <uiTable:Column >
                    <Label text="{i18n>requestSystemDocumentSyndicationStatus}" />
                    <uiTable:template>
                        <Text text="{parts:['docCommentModel>docSystemStatus', 'LookupModel>/materialStatus'],formatter: '.formatter.getMaterialStatusText'}"/>
                    </uiTable:template>
                </uiTable:Column>
                <uiTable:Column >
                    <Label text="{i18n>Actions}" />
                    <uiTable:template>
                        <Button icon="sap-icon://delete" tooltip="{i18n>ClickToDelete}" enabled="{parts:['docCommentModel>docSystemStatus'], formatter:'.formatter.getDocumentSystemDeleteButtonVisibility'}" press="onDeleteDraftDocument" />
                    </uiTable:template>
                </uiTable:Column>
            </uiTable:columns>
        </uiTable:Table>
        <buttons>
            <Button text="{i18n>close}" press="onCloseDocumentSystemStatus" type="Emphasized" class="MM_BtnEmphasized"></Button>
            <Button text="{i18n>okText}" press="onPressOkDocumentSystemStatus" type="Emphasized" class="MM_BtnEmphasized"></Button>
        </buttons>
    </Dialog>
</core:FragmentDefinition>