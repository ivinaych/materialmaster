<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Popover id="id_SelectSystemForDocument" title="Add System" class="sapUiResponsivePadding--header sapUiResponsivePadding--footer" placement="Bottom">
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button text="Add" press="onAddSystemForDocument" />
            </OverflowToolbar>
        </footer>
        <VBox >
            <List id="id_listOfSystemForDocument" mode="MultiSelect" items="{docCommentModel>/documents/selectedDocument/listOfAbsentSystems}" includeItemInSelection="true" itemPress="" >
                <StandardListItem title="{parts:['docCommentModel>MM_SYSTEM_ID', 'LookupModel>/MM_SYSTEM_REF_LIST'],formatter: '.formatter.getSystemText'}" />
                
            </List>
        </VBox>
    </Popover>
</core:FragmentDefinition>
