<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog showHeader="true" id="id_ApproveReject_Comments" draggable="true">
        <customHeader>
            <Bar>
                <contentLeft>
                    <Label text="{parts:['oAppModel>/GeneralData/UserComments/actioni18nText'], formatter:'.formatter.geti18nName'}" design="Bold" class="MM_Label"></Label>
                </contentLeft>
                <contentRight>
                    <Button icon="sap-icon://decline" press="onCloseCommentsPopUp" type="Default" class="MM_BtnDefault"/>
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <VBox class="sapUiTinyMargin">
                <Label text= "{i18n>enterYourComment}" class="MM_Label"/>
                <TextArea placeholder="{i18n>enterYourComment}" value="{oAppModel>/GeneralData/UserComments/comment}" width="100%" growing="true" rows="3" growingMaxLines="7" liveChange="ToCheckforSubmitButtonEnabledinComments"/>
            </VBox>
        </content>
        <buttons>
            <Button text="{i18n>submitComment}" type="Emphasized" press="onSubmitApproveRejectComments" enabled="{oAppModel>/GeneralData/UserComments/enable_SubmitCommentBtn}" class="sigBtnEmphasized"></Button>
        </buttons>
    </Dialog>
</core:FragmentDefinition>