<core:FragmentDefinition xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:table="sap.ui.table"
    xmlns:core="sap.ui.core">
    <Dialog contentHeight="40%" contentWidth="80%" showHeader="true" id="id_changeLogSummary">
        <customHeader>
            <Bar>
                <contentLeft>
                    <Title level="H4" titleStyle="H6" text="{i18n>listOfChanges}" class="MM_Title"/>
                </contentLeft>
                <contentRight>
                    <Button icon="sap-icon://decline" press="onCloseChangeLogSummary"/>
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <VBox class="sapUiSmallMargin">
                    <table:Table rows="{MaterialDetails>/changeLogSummary/changeLogSummaryList}" visibleRowCount="8" id="changeLogSummaryTable" selectionMode="Single" class="MM_UiTable MM_UiTableCopy" selectionBehavior="RowOnly">
                        <!-- <table:extension>
                            <OverflowToolbar style="Clear">
                                <ToolbarSpacer/>
                            </OverflowToolbar>
                        </table:extension> -->
                        <table:columns>
                            <table:Column >
                                <Label text="{i18n>materialNumber}" />
                                <table:template>
                                    <Text text="{MaterialDetails>materialNumber}" wrapping="false" />
                                </table:template>
                            </table:Column>
                            <table:Column width="10%">
                                <Label text="{i18n>requestNumber}" />
                                <table:template>
                                    <Text text="{MaterialDetails>requestNumber}" wrapping="false" />
                                </table:template>
                            </table:Column>
                            <table:Column width="10%">
                                <Label text="{i18n>systemId}" />
                                <table:template>
                                    <Text text="{parts:['MaterialDetails>systemID', 'LookupModel>/MM_SYSTEM_REF_LIST'],formatter: '.formatter.getSystemText'}" wrapping="false" />
                                </table:template>
                            </table:Column>
                            <table:Column >
                                <Label text="{i18n>uiView}" />
                                <table:template>
                                    <Text text="{parts:['MaterialDetails>uiView'],formatter: '.formatter.geti18nName'}" wrapping="false" />
                                </table:template>
                            </table:Column>
                            <table:Column >
                                <Label text="{i18n>additionalInfo}" />
                                <table:template>
                                    <Text text="{MaterialDetails>addInfo}" wrapping="false" />
                                </table:template>
                            </table:Column>
                            <table:Column >
                                <Label text="{i18n>fieldName}" />
                                <table:template>
                                    <Text text="{path: 'MaterialDetails>fieldName', formatter: '.formatter.geti18nName'}" wrapping="false" />
                                </table:template>
                            </table:Column>
                            <table:Column >
                                <Label text="{i18n>oldValue}" />
                                <table:template>
                                    <Text text="{parts:['MaterialDetails>fieldName', 'MaterialDetails>oldValue'],formatter: '.formatter.getRequestChangeNewValue'}" wrapping="false" />
                                </table:template>
                            </table:Column>
                            <table:Column >
                                <Label text="{i18n>newValue}" />
                                <table:template>
                                    <Text text="{parts:['MaterialDetails>fieldName', 'MaterialDetails>newValue'],formatter: '.formatter.getRequestChangeNewValue'}" wrapping="false" />
                                </table:template>
                            </table:Column>
                            <table:Column >
                                <Label text="{i18n>updatedBy}" />
                                <table:template>
                                    <Text text="{MaterialDetails>updatedById}" wrapping="false" />
                                </table:template>
                            </table:Column>
                            <table:Column >
                                <Label text="{i18n>updatedOn} {i18n>gmt} " />
                                <table:template>
                                    <Text text="{MaterialDetails>updatedOn}" wrapping="false" />
                                </table:template>
                            </table:Column>
                        </table:columns>
                </table:Table>
            </VBox>
        </content>
        <footer>
            <Toolbar>
                <content>
                    <ToolbarSpacer />
                    <Button text="{i18n>ok}" press="onCloseChangeLogSummary" class="MM_BtnEmphasized" type="Emphasized"/>
                </content>
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>